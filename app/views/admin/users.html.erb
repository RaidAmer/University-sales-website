<h1> Pending User Approvals</h1>

<% if @pending_users.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>UUID</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pending_users.each do |user| %>
        <tr>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.uuid %></td>
          <td><%= user.email %></td>
          <td>
            <%= button_to "Approve", approve_user_path(user), method: :patch, class: "btn btn-success btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No users pending approval.</p>
<% end %>
