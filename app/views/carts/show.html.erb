<% if flash[:alert].present? %>
  <div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>

<h1>My Cart</h1>

<% if @cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td>
            <div style="display: flex; align-items: center;">
              <%= image_tag item.product.image, width: 60, height: 60, style: "margin-right: 10px;" %>
              <%= item.product.name %>
            </div>
          </td>
          <td>
            <%= button_to "+", update_quantity_cart_item_path(item, quantity: item.quantity + 1),
                  method: :patch,
                  class: "btn btn-sm btn-outline-primary px-1 py-0" %>

            <span class="mx-2"><%= item.quantity %></span>

            <%= button_to "â€“", update_quantity_cart_item_path(item, quantity: item.quantity - 1),
                  method: :patch,
                  class: "btn btn-sm btn-outline-danger px-1 py-0" %>

          </td>
          <td>
            $<%= '%.2f' % (item.quantity * item.product.price) %>
          </td>
          <td>
            <%= button_to "Remove",
                  cart_item_path(item),
                  method: :delete,
                  class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>Total:</strong> $<%= '%.2f' % @total %></p>

  <%= form_with url: checkout_orders_path, method: :post do |f| %>
    <%= hidden_field_tag :total_price, @total %>
    <%= hidden_field_tag :user_id, current_user.id %>  <!-- use current_user.id here -->
    <%= f.submit "Proceed to Payment", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <div class="alert alert-warning">Your cart is empty.</div>
<% end %>
