<h1>Category!</h1>

<table class="table table-hover">
 
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Image</th>
    </tr>
  </thead>
 
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_products_path(category) %></td>
        <td>
          <% if category.icon.present? %>
          <%= image_tag category.icon, width: 100, height: 100, alt: "#{category.name} image" %>
          <% else %>
            <span>No image available</span>
          <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
 
</table>

<p>
<% if user_signed_in? && current_user.approved? %>
  <%= link_to "Create New category", new_category_path %>
<% end %>

</p>

<p><%= link_to "Back", home_path %></p>