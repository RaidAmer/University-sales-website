<h1>Create Account</h1>

<%= bootstrap_form_with model: @user, url: users_path, method: :post, data: { turbo: false }, html: { multipart: true } do |f| %>

  <%= f.email_field :email, label: "Email" %>
  <%= f.text_field :first_name, label: "First Name" %>
  <%= f.text_field :last_name, label: "Last Name" %>
  <%= f.password_field :password, label: "Password" %>
  <%= f.password_field :password_confirmation, label: "Confirm Password" %>
  <%= f.file_field :university_id, label: "Upload University ID" %>

  <%= f.submit "Create Account" %>
<% end %>

<%= link_to "Back to Home", home_path %>
