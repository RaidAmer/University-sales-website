<h1>Events</h1>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Date</th>
            <th>Price</th>
            <th>Register</th>
        </tr>
    </thead>

    <tbody>
        <% @events.each do |event| %>
            <tr>
                <td><%= event.event_name %></td>
                <td><%= event.location %></td>
                <td><%= event.date.strftime("%m/%d/%Y") %></td>
                <td><%= event.price %></td>
                <td><%= link_to "Register", event_path(event), class: 'btn btn-primary' %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "Create New Event", new_event_path, class: 'btn btn-primary' %></p>