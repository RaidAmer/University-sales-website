
<h1>View Message</h1>

<p><strong>From:</strong> <%= @message.sender.email %></p>
<p><strong>To:</strong> <%= @message.recipient.email %></p>
<p><strong>Sent At:</strong> <%= @message.created_at.strftime("%B %d, %Y %I:%M %p") %></p>
<hr>
<p><strong>Message:</strong></p>
<p style="white-space: pre-line;"><%= @message.body %></p>

<hr>
<h2>Reply</h2>
<%= form_with url: reply_message_path(@message), local: true do |form| %>
  <div class="field">
    <%= form.label :body, "Your Reply" %><br>
    <%= form.text_area :body, rows: 6, style: "width: 100%;" %>
  </div>

  <div class="actions" style="margin-top: 10px;">
    <%= form.submit "Send Reply", class: "btn btn-secondary" %>
  </div>
<% end %>

<%= link_to 'Back to Inbox', messages_path, style: "display: inline-block; margin-top: 20px;" %>
