<turbo-frame id="notification_<%= notification.id %>">
  <div class="card mb-2" id="notification_<%= notification.id %>">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h6 class="card-subtitle mb-1 text-muted">
          <%= notification.actor&.email || "System" %> ‚Äî
          <%= time_ago_in_words(notification.created_at) %> ago
        </h6>
        <div class="card-text notification-text">
          <% if notification.notifiable_type == "Message" %>
            <%= link_to "üì® #{notification.actor&.email || 'Someone'} sent you a message", message_path(notification.notifiable_id) %>
          <% elsif notification.notifiable_type == "User" %>
            A new user registered:
            <%= link_to notification.notifiable.email, "/admin/user/#{notification.notifiable_id}" %>
          <% elsif notification.notifiable_type == "Event" %>
            <% if notification.action == "deleted an event you registered for" %>
              <p style="color: red; font-weight: bold;">‚ùå The event you registered for, "<%= notification.notifiable.event_name %>", was canceled by <%= notification.actor&.email || "the organizer" %>.</p>
            <% elsif notification.action == "unregistered from your event" %>
              <p style="color: green; font-weight: bold;">
                ‚úÖ <%= notification.actor&.email || "A user" %> unregistered from your event:
                "<%= notification.notifiable.event_name %>"
              </p>
              <%= link_to "üìÖ View Event", event_path(notification.notifiable_id), class: "btn btn-outline-success btn-sm" %>
            <% elsif notification.action == "registered for your event" %>
              <p style="color: green; font-weight: bold;">
                ‚úÖ <%= notification.actor&.email || "A user" %> registered for your event:
                "<%= notification.notifiable.event_name %>"
              </p>
              <%= link_to "üìÖ View Event", event_path(notification.notifiable_id), class: "btn btn-outline-success btn-sm" %>
            <% else %>
              <p>‚ö†Ô∏è You have a new event notification.</p>
              <%= link_to "üìÖ View Event", event_path(notification.notifiable_id), class: "btn btn-outline-secondary btn-sm" %>
            <% end %>
          <% elsif notification.notifiable_type == "CheckoutOrder" %>
            <% if notification.action.start_with?("purchased your item") %>
              <% product_name = notification.metadata["product_name"] || "Unnamed Item" %>
              <%= link_to "üõí #{notification.actor&.email || 'Someone'} purchased your item: \"#{product_name}\"", checkout_order_path(notification.notifiable_id) %>
            <% elsif notification.action.downcase == "your order has been delivered" %>
              <%= link_to "üì¶ Your item was delivered successfully", checkout_order_path(notification.notifiable_id), class: "btn btn-outline-primary btn-sm" %>
            <% elsif notification.action.downcase.include?("cancelled order") %>
              <p style="color: red; font-weight: bold;">
                ‚ùå Order canceled: <%= notification.notifiable.cart_items.first.product.name %>
              </p>
              <%= link_to "üìÑ View Order", checkout_order_path(notification.notifiable_id), class: "btn btn-outline-danger btn-sm" %>
            <% elsif notification.action.downcase.include?("cancelled an order you placed") %>
              <p style="color: red;">‚ùå <%= notification.actor&.email || "The seller" %> cancelled an order you placed.</p>
              <%= link_to "üìÑ View Order", checkout_order_path(notification.notifiable_id), class: "btn btn-outline-warning btn-sm" %>
            <% else %>
              <%= link_to "‚ö†Ô∏è You have an order update", checkout_order_path(notification.notifiable_id) %>
            <% end %>
          <% else %>
            <%= link_to "‚ö†Ô∏è You have a new notification", polymorphic_path(notification.notifiable) rescue "#" %>
          <% end %>
        </div>
      </div>
      <div>
        <%= button_to "üóëÔ∏è", notification_path(notification), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</turbo-frame>
