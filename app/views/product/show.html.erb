<h1><%= @product.name%></h1>

<p>Sold by: <%= @product.user.first_name %> <%= @product.user.last_name %></p>

<p> <%=@product.description%></p>
<p><%= image_tag @product.image, width: 100, height: 100, alt: "#{@product.name} image" %></p>
<p><%= number_to_currency(@product.price) %></p>
<p><%=@product.status%></p>
<%= button_to "Add to Cart", cart_items_path(product_id: @product.id), method: :post, class: "btn btn-success", id: "add-to-cart-btn" %>


<p>
<%= link_to "Back to Store", category_products_path(@category) %>
</p>