<div class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= image_tag @product.image, class: "img-fluid rounded shadow", alt: "#{@product.name} image", style: "max-height: 300px; object-fit: contain;" %>
    </div>

    <div class="col-md-8">
      <h1 class="mb-3"><%= @product.name %></h1>
      
      <p class="mb-3"><%= @product.description %></p>

      <h4 class="text-success mb-2"><%= number_to_currency(@product.price) %></h4>
      <p>Status: <%= @product.status %></p>

      <div class="mt-4">
        <%= link_to "← Back to Dashboard", seller_dashboard_path, class: "btn btn-outline-secondary rounded-pill px-4" %>
      </div>
    </div>
  </div>
</div>
