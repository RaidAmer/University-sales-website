<h1>Create Account</h1>

<%= render 'shared/flash' %>

<%= bootstrap_form_with model: @user, url: users_path, method: :post, data: { turbo: false }, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.text_field :first_name, label: "First Name", required: false %>
  </div>

  <div class="mb-3">
    <%= f.text_field :last_name, label: "Last Name", required: false %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, label: "Password", required: false %>
  </div>

  <div class="mb-3">
    <%= f.file_field :university_id, label: "Upload University ID", required: false %>
  </div>

  <%= f.submit "Create Account", class: "btn btn-success" %>
<% end %>

<br>

<%= link_to "Back to Home", home_path, class: "btn btn-outline-secondary" %>
